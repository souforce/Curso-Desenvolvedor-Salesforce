<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Tipo_Valido</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Tipo__c , &quot;^.{2}[Xx]&quot;))</errorConditionFormula>
    <errorDisplayField>Tipo__c</errorDisplayField>
    <errorMessage>Tipo invalido, 3 caracter deve contar X ou x</errorMessage>
</ValidationRule>
